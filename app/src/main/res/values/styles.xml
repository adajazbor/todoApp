<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="listFont">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="detailsRegularFont">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="detailsBoldFont">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="priorityFont">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="priorityFontLow" parent="priorityFont">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="priorityFontMedium" parent="priorityFont">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="priorityFontHigh" parent="priorityFont">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>
